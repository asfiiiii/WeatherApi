<body>
    <main>
         
        <header>

            <nav class="navbar " > 
            
            <div class="logo">
                <h2> <i class="uil uil-umbrella"></i> </i>Weather</h2>
             </div>   
            <div class="nav_items">
                <div class="a">
                    <a href="/home">Home</a>
                    <a href="/api">API</a>
                    <a href="/about">About</a>
                </div>
                <div class="credit">
                    <p> &#169; ASFI</p>
                    <a href="">
                        Visit my Profile
                    </a>
                </div>
                
            </div>
            <button class="toggle" id="btn">
                <i class="uil hehe uil-bars"></i>
                <i class="uil heh uil-times"></i>
