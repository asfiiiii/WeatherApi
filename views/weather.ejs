                <div class="wind">
                    <i class="uil wiind uil-wind"></i>
                    <p class="wind_p"> Wind</p>                    
                    
                </div>
                <div class="humidity">
                    <i class="uil hum uil-water"></i>
                    <p class="hum_p"> Humidity</p>
                </div>
                
            </div>
        </div>
     
        
    </section>
